{
  "name": "cloudflare-ab-testing",
  "version": "1.3.0",
  "description": "WordPress plugin for A/B testing using Cloudflare Workers",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "./scripts/build-plugin.sh",
    "lint:js": "eslint plugin/assets/js/",
    "lint:php": "phpcs plugin/ --standard=WordPress",
    "format": "prettier --write plugin/assets/js/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dilanti-Media/cloudflare-ab-testing.git"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "ab-testing",
    "cloudflare",
    "workers",
    "performance"
  ],
  "author": "Dilanti Media",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "puppeteer": "^24.16.0"
  }
}
